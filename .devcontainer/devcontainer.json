{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
        "cpus": 2
    },
    "waitFor": "onCreateCommand",
    "postCreateCommand": "",
	"forwardPorts": [80],
    "portsAttributes": {
        "80": {
            "label": "Weather_website"
        }
    },
	"postAttachCommand": {
        "server1": "gh codespace ports visibility 80:public -c $CODESPACE_NAME\ndocker-compose down -v\nsleep 10s\ndocker-compose up --build",
        "server2": "gh codespace ports -c $CODESPACE_NAME"
    }
}
